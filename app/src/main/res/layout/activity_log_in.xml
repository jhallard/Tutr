<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.ucsc.teamtutor.tutr.UI.LogIn" tools:ignore="MergeRootFrame"
    style="@style/AppTheme"
    android:padding="@dimen/activity_horizontal_margin">

<EditText
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/EMAIL"
android:background="@color/accent_material_dark"
android:editable="true"
android:elegantTextHeight="true"
android:height="@dimen/abc_action_bar_default_height_material"
android:hint="Email Address"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_alignEnd="@+id/PASSWORD"
    android:autoText="false" />

<EditText
android:layout_width="wrap_content"
android:layout_height="@dimen/abc_action_bar_default_height_material"
android:inputType="textPassword"
android:ems="10"
android:id="@+id/PASSWORD"
android:editable="true"
android:hint="Password"
android:height="@dimen/abc_action_bar_default_height_material"
android:enabled="true"
android:background="@color/accent_material_dark"
    android:layout_below="@+id/EMAIL"
    android:layout_alignParentStart="true"
    android:layout_alignEnd="@+id/SIGNUP" />

<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/login_button"
android:id="@+id/ATTEMPT_LOGIN"
    android:height="@dimen/abc_action_bar_default_height_material"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:layout_alignEnd="@+id/SIGNUP" />

<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/sign_up_button"
android:id="@+id/SIGNUP"
    android:height="@dimen/abc_action_bar_default_height_material"
    android:layout_below="@+id/ATTEMPT_LOGIN"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cant_remember_password_button"
        android:id="@+id/FORGOT_PASSWORD"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:layout_below="@+id/SIGNUP"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_alignEnd="@+id/SIGNUP" />

</RelativeLayout>
