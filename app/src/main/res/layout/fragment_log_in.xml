<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ucsc.teamtutor.tutr.LogIn$PlaceholderFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NAME"
        android:background="@color/accent_material_dark"
        android:editable="true"
        android:elegantTextHeight="true"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:hint="Name"
        android:layout_marginTop="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PASSWORD"
        android:editable="true"
        android:hint="Password"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:enabled="true"
        android:background="@color/accent_material_dark"
        android:layout_below="@+id/EMAIL"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/EMAIL" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Sign-up"
        android:id="@+id/SIGNUP"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/CONFIRM_PASSWORD"
        android:editable="true"
        android:hint="Confirm Password"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:enabled="true"
        android:background="@color/accent_material_dark"
        android:layout_below="@+id/PASSWORD"
        android:layout_alignEnd="@+id/PASSWORD"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EMAIL"
        android:background="@color/accent_material_dark"
        android:editable="true"
        android:elegantTextHeight="true"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:hint="Email"
        android:layout_below="@+id/NAME"
        android:layout_alignEnd="@+id/NAME"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign-up as Tutor"
        android:id="@+id/checkBox"
        android:layout_below="@+id/CONFIRM_PASSWORD"
        android:layout_alignEnd="@+id/SIGNUP"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:checked="false"
        android:layout_alignParentStart="true" />

</RelativeLayout>
